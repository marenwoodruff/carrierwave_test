<div class="restaurant">
  <%= link_to image_tag(restaurant.image_url(:thumb)), restaurant if restaurant.image? %>
  <div class="name"><%= restaurant.name %></div>
  <div class="actions">
    <%= link_to "edit", edit_restaurant_path(restaurant) %> |
    <%= link_to "remove", restaurant, :confirm => 'Are you sure?', :method => :delete %>
  </div>
</div>