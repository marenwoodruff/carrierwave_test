<div class="row">
	<div class="col-md-6 col-md-offset-3 center">
		<%= link_to image_tag(@restaurant.image.detail.url.to_s), @restaurant.image.detail.url %>

		<h1>
		  <%= @restaurant.name %>
		</h1>

		<div class="star-rating" data-score= <%= @avg_rating %> ></div>
		<p><%= "#{@reviews.length} review(s)" %></p>

		<p>
		  <strong>Address:</strong>
		  <%= @restaurant.address %>
		</p>

		<p>
		  <strong>Phone:</strong>
		  <%= @restaurant.phone %>
		</p>

		<p>
		  <strong>Website:</strong>
		  <%= link_to @restaurant.website, @restaurant.website if @restaurant.website %>
		</p>

		<%= link_to 'Write a Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
		<br />
		<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> |
		<%= link_to 'Home', restaurants_path, class: "btn btn-link" %>

		<% if @reviews.blank? %>
      <h3>No reviews yet. Be the first to write one!</h3>
     <% else %>
			<h3>Reviews</h3>
			<table class="table">
				<thead>
					<tr>
				    <th class="col-md-3"></th>
				    <th class="col-md-9"></th>
				  </tr>
				</thead>
			  <tbody>
			    <% @reviews.each do |review| %>
			      <tr>
			      	<td>
								<h4>
								  <%= "#{review.user.first_name.capitalize} #{review.user.last_name.capitalize[0]}." %>
								</h4>
								<p><%= review.created_at.strftime("%-m/%-d/%y") %></p>
							</td>
			        <td>
			          <div class="star-rating" data-score= <%= review.rating %> ></div>
			          <p><%= h(review.comment).gsub(/\n/, '<br/>').html_safe %></p>

			          <% if user_signed_in? %>
								  <% if (review.user === current_user) || (current_user.admin?) %>
								    <%= link_to "Edit", edit_restaurant_review_path(@restaurant, review) %> | 
								    <%= link_to "Delete", restaurant_review_path(@restaurant, review), method: :delete %>
								  <% end %>
								<% end %>
			        </td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>
		<% end %>
	</div>
</div>

<script>
  $('.star-rating').raty({
  	path: 'https://s3-us-west-2.amazonaws.com/restaurantreviews/stars',
  	readOnly: true,
  	score: function() {
	    return $(this).attr('data-score');
	  }
  });
</script>